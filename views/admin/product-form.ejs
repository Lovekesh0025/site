<!DOCTYPE html>
<html>
<head>
	<title><%= product ? 'Edit' : 'Add' %> Product - CupidCrafts Admin</title>
	<style>
		* {
			margin: 0;
			padding: 0;
			box-sizing: border-box;
		}

		body {
			font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
			background: #f5f5f5;
		}

		.admin-container {
			display: grid;
			grid-template-columns: 250px 1fr;
			min-height: 100vh;
		}

		aside {
			background: #2c3e50;
			color: white;
			padding: 2rem 0;
			position: sticky;
			top: 0;
		}

		.sidebar-header {
			padding: 0 2rem;
			margin-bottom: 2rem;
			font-size: 1.3rem;
			font-weight: bold;
			color: #e91e63;
		}

		aside ul {
			list-style: none;
		}

		aside a {
			display: block;
			padding: 1rem 2rem;
			color: white;
			text-decoration: none;
			transition: background 0.3s;
		}

		aside a:hover,
		aside a.active {
			background: #e91e63;
		}

		main {
			padding: 2rem;
		}

		header {
			background: white;
			padding: 1rem 2rem;
			border-bottom: 1px solid #eee;
			margin-bottom: 2rem;
			border-radius: 8px;
		}

		.form-container {
			background: white;
			padding: 2rem;
			border-radius: 8px;
			max-width: 600px;
		}

		.form-group {
			margin-bottom: 1.5rem;
		}

		label {
			display: block;
			margin-bottom: 0.5rem;
			font-weight: 500;
			color: #333;
		}

		input, textarea, select {
			width: 100%;
			padding: 0.75rem;
			border: 1px solid #ddd;
			border-radius: 4px;
			font-size: 1rem;
			font-family: inherit;
		}

		textarea {
			resize: vertical;
			min-height: 120px;
		}

		input:focus, textarea:focus, select:focus {
			outline: none;
			border-color: #e91e63;
			box-shadow: 0 0 0 3px rgba(233, 30, 99, 0.1);
		}

		.form-actions {
			display: flex;
			gap: 1rem;
			margin-top: 2rem;
		}

		.btn {
			padding: 0.75rem 1.5rem;
			background: #e91e63;
			color: white;
			border: none;
			border-radius: 4px;
			cursor: pointer;
			font-size: 1rem;
			text-decoration: none;
			transition: background 0.3s;
		}

		.btn:hover {
			background: #c2185b;
		}

		.btn-secondary {
			background: #999;
		}

		.btn-secondary:hover {
			background: #777;
		}

		.logout {
			background: #e91e63;
		}

		.logout:hover {
			background: #c2185b;
		}

		.photos-grid {
			display: grid;
			grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
			gap: 1rem;
			margin-top: 1rem;
		}

		.photo-item {
			border: 1px solid #ddd;
			border-radius: 4px;
			overflow: hidden;
		}

		.photo-item img {
			width: 100%;
			height: 150px;
			object-fit: cover;
			display: block;
		}

		.btn-delete {
			width: 100%;
			padding: 0.5rem;
			background: #dc3545;
			color: white;
			border: none;
			border-radius: 0;
			cursor: pointer;
			font-size: 0.9rem;
			transition: background 0.3s;
		}

		.btn-delete:hover {
			background: #c82333;
		}

		.file-input-wrapper {
			border: 2px dashed #ddd;
			padding: 2rem;
			border-radius: 4px;
			text-align: center;
			cursor: pointer;
			transition: all 0.3s;
		}

		.file-input-wrapper:hover {
			border-color: #e91e63;
			background: #f9e9f3;
		}

		.file-input-wrapper input {
			display: none;
		}

		.file-input-label {
			cursor: pointer;
			color: #e91e63;
			font-weight: 500;
		}

		@media (max-width: 1024px) {
			.admin-container {
				grid-template-columns: 200px 1fr;
			}

			main {
				padding: 1.5rem;
			}

			header {
				padding: 0.75rem 1.5rem;
			}
		}

		@media (max-width: 768px) {
			.admin-container {
				grid-template-columns: 1fr;
			}

			aside {
				position: sticky;
				top: 0;
				z-index: 100;
				padding: 1rem 0;
			}

			.sidebar-header {
				font-size: 1.1rem;
			}

			aside a {
				padding: 0.75rem 1.5rem;
			}

			main {
				padding: 1rem;
			}

			.form-container {
				max-width: 100%;
				padding: 1.5rem;
			}

			.form-group {
				margin-bottom: 1rem;
			}

			input, textarea, select {
				padding: 0.6rem;
				font-size: 16px;
			}

			.form-actions {
				flex-wrap: wrap;
				gap: 0.75rem;
			}

			.btn {
				flex: 1;
				min-width: 120px;
			}

			.photos-grid {
				grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
				gap: 0.75rem;
			}
		}

		@media (max-width: 480px) {
			aside {
				padding: 0.5rem 0;
			}

			aside ul {
				display: flex;
				flex-direction: column;
			}

			aside a {
				padding: 0.6rem 1rem;
				font-size: 0.85rem;
			}

			.sidebar-header {
				font-size: 0.95rem;
				padding: 0 1rem;
			}

			main {
				padding: 0.75rem;
			}

			.form-container {
				padding: 1rem;
			}

			header h2 {
				font-size: 1.2rem;
			}

			input, textarea, select {
				font-size: 16px;
				padding: 0.5rem;
			}

			.form-actions {
				flex-direction: column;
			}

			.btn {
				width: 100%;
			}

			.photos-grid {
				grid-template-columns: repeat(2, 1fr);
			}

			.file-input-wrapper {
				padding: 1rem;
			}

			small {
				font-size: 0.75rem;
			}
		}
	</style>
</head>
<body>
	<div class="admin-container">
		<aside>
			<div class="sidebar-header">CupidCrafts Admin</div>
			<ul>
				<li><a href="/admin/dashboard">Dashboard</a></li>
				<li><a href="/admin/products" class="active">Products</a></li>
				<li><a href="/admin/categories">Categories</a></li>
				<li><a href="/admin/orders">Orders</a></li>
				<li><a href="/auth/logout" class="logout">Logout</a></li>
			</ul>
		</aside>

		<main>
			<header>
				<h2><%= product ? 'Edit Product' : 'Add New Product' %></h2>
			</header>

			<div class="form-container">
				<form method="POST" action="<%= product ? `/admin/products/${product.id}` : '/admin/products' %>" enctype="multipart/form-data">
					<div class="form-group">
						<label for="name">Product Name *</label>
						<input type="text" id="name" name="name" value="<%= product ? product.name : '' %>" required>
					</div>

					<div class="form-group">
						<label for="description">Description</label>
						<textarea id="description" name="description"><%= product ? product.description : '' %></textarea>
					</div>

					<div class="form-group">
						<label for="price">Price (â‚¹) *</label>
						<input type="number" id="price" name="price" step="0.01" value="<%= product ? product.price : '' %>" required>
					</div>

					<div class="form-group">
						<label for="category_id">Category</label>
						<select id="category_id" name="category_id">
							<option value="">Select Category</option>
							<% categories.forEach(cat => { %>
								<option value="<%= cat.id %>" <%= product && product.category_id === cat.id ? 'selected' : '' %>> <%= cat.name %></option>
							<% }); %>
						</select>
					</div>

					<div class="form-group">
						<label for="stock">Stock Quantity *</label>
						<input type="number" id="stock" name="stock" value="<%= product ? product.stock : '' %>" required>
					</div>

					<div class="form-group">
						<label>Product Photos</label>
						<div class="file-input-wrapper" onclick="document.getElementById('photos').click();">
							<div class="file-input-label">
								ðŸ“· Click to upload photos or drag and drop<br>
								<small style="margin-top: 0.5rem;">Up to 10 images, 5MB max per file</small>
							</div>
							<input type="file" id="photos" name="photos" multiple accept="image/*">
						</div>
						<small style="margin-top: 0.5rem; color: #666;">Supported formats: JPEG, PNG, GIF, WebP</small>
					</div>

					<% if (typeof photos !== 'undefined' && photos.length > 0) { %>
						<div class="form-group">
							<label>Existing Photos (<%= photos.length %>)</label>
							<div class="photos-grid">
								<% photos.forEach((photo) => { %>
									<div class="photo-item">
										<img src="<%= photo.photo_url %>" alt="Product photo">
										<form method="POST" action="/admin/products/<%= product.id %>/photos/<%= photo.id %>/delete" style="margin: 0;">
											<button type="submit" class="btn-delete" onclick="return confirm('Delete this photo?')">Delete</button>
										</form>
									</div>
								<% }); %>
							</div>
						</div>
					<% } %>

					<div class="form-actions">
						<button type="submit" class="btn">Save</button>
						<a href="/admin/products" class="btn btn-secondary">Cancel</a>
					</div>
				</form>
			</div>
		</main>
	</div>
</body>
</html>
 