<!DOCTYPE html>
<html>
<head>
  <title><%= product.name %> - CupidCrafts</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: #f5f5f5;
    }

    header {
      background: white;
      border-bottom: 1px solid #eee;
      padding: 1rem 0;
    }

    nav {
      max-width: 1200px;
      margin: 0 auto;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0 20px;
    }

    .logo {
      font-size: 1.5rem;
      font-weight: bold;
      color: #e91e63;
    }

    .container {
      max-width: 1200px;
      margin: 2rem auto;
      padding: 0 20px;
      background: white;
      border-radius: 8px;
      padding: 2rem;
    }

    .product-detail {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
    }

    .product-image-container {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .product-image-main {
      width: 100%;
      height: 400px;
      background: #f0f0f0;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 3rem;
      border-radius: 8px;
      overflow: hidden;
      position: relative;
    }

    .product-image-main img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .photo-placeholder {
      position: absolute;
      font-size: 5rem;
      color: #ccc;
    }

    .product-thumbnails {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(80px, 1fr));
      gap: 0.75rem;
    }

    .thumbnail {
      width: 80px;
      height: 80px;
      background: #f0f0f0;
      border: 2px solid #ddd;
      border-radius: 4px;
      cursor: pointer;
      overflow: hidden;
      transition: all 0.3s;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.5rem;
    }

    .thumbnail:hover {
      border-color: #e91e63;
    }

    .thumbnail.active {
      border-color: #e91e63;
      background: #f9e9f3;
    }

    .thumbnail img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .product-details h1 {
      font-size: 2rem;
      margin-bottom: 1rem;
    }

    .price {
      font-size: 2rem;
      color: #e91e63;
      font-weight: bold;
      margin-bottom: 1rem;
    }

    .description {
      color: #666;
      margin-bottom: 2rem;
      line-height: 1.8;
    }

    .stock {
      margin-bottom: 1.5rem;
      padding: 1rem;
      background: #f0f0f0;
      border-radius: 4px;
    }

    .quantity-selector {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-bottom: 2rem;
    }

    .quantity-selector input {
      width: 60px;
      padding: 0.5rem;
      border: 1px solid #ddd;
      border-radius: 4px;
    }

    .btn {
      padding: 1rem 2rem;
      background: #e91e63;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 1rem;
      transition: background 0.3s;
    }

    .btn:hover {
      background: #c2185b;
    }

    .btn-back {
      background: #2196F3;
      margin-bottom: 1rem;
    }

    .btn-back:hover {
      background: #1976D2;
    }

    @media (max-width: 768px) {
      .product-detail {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>
<body>
  <header>
    <nav>
      <div class="logo">CupidCrafts ‚ô•</div>
      <div>
        <a href="/" style="text-decoration: none; color: #333;">Back to Shop</a>
      </div>
    </nav>
  </header>

  <div class="container">
    <button class="btn btn-back" onclick="window.history.back()">‚Üê Back</button>
    
    <div class="product-detail">
      <div class="product-image-container">
        <div class="product-image-main" id="mainImage">
          <% if (typeof photos !== 'undefined' && photos.length > 0) { %>
            <img src="<%= photos[0].photo_url %>" alt="<%= product.name %>" id="mainImg">
          <% } else { %>
            <div class="photo-placeholder">üì¶</div>
          <% } %>
        </div>
        
        <% if (typeof photos !== 'undefined' && photos.length > 1) { %>
          <div class="product-thumbnails">
            <% photos.forEach((photo, index) => { %>
              <div class="thumbnail <%= index === 0 ? 'active' : '' %>" onclick="switchImage('<%= photo.photo_url %>', this)">
                <img src="<%= photo.photo_url %>" alt="<%= product.name %> - thumbnail <%= index + 1 %>">
              </div>
            <% }); %>
          </div>
        <% } %>
      </div>
      
      <div class="product-details">
        <h1><%= product.name %></h1>
        <div class="price">‚Çπ<%= product.price %></div>
        <div class="description">
          <%= product.description || 'Beautiful handcrafted gift item' %>
        </div>
        
        <div class="stock">
          <strong>In Stock:</strong> <%= product.stock %> items available
        </div>

        <% if (user) { %>
          <div class="quantity-selector">
            <label for="quantity">Quantity:</label>
            <input type="number" id="quantity" name="quantity" min="1" max="<%= product.stock %>" value="1">
          </div>

          <button class="btn" onclick="addToCart('<%= product.id %>')">Add to Cart</button>
        <% } else { %>
          <div style="padding: 1rem; background: #fff3cd; border-radius: 4px; color: #856404;">
            <a href="/auth/login" style="text-decoration: none; color: #e91e63;">Please login</a> to add to cart
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <script>
    function switchImage(imageUrl, element) {
      const mainImg = document.getElementById('mainImg');
      if (mainImg) {
        mainImg.src = imageUrl;
      }
      
      document.querySelectorAll('.thumbnail').forEach(el => {
        el.classList.remove('active');
      });
      element.classList.add('active');
    }

    function addToCart(productId) {
      const quantity = document.getElementById('quantity').value;
      
      fetch('/cart/add', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ productId, quantity: parseInt(quantity) })
      })
      .then(res => res.json())
      .then(data => {
        if (data.success) {
          alert('Added to cart!');
          window.location.href = '/cart';
        } else {
          alert(data.message);
        }
      });
    }
  </script>
</body>
</html>
